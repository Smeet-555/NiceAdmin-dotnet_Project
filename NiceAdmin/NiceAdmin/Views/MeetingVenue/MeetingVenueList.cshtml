@{
    ViewData["Title"] = "Meeting Venue List";
}

<div class="pagetitle">
    <h1>Meeting Venues</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="breadcrumb-item">Master</li>
            <li class="breadcrumb-item active">Meeting Venues</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title">Venue List</h5>

                        <a asp-action="MeetingVenueAddEdit"
                           class="btn btn-primary btn-sm">
                            <i class="bi bi-plus-lg"></i> Add Venue
                        </a>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead>
                            <tr>
                                <th>Venue Name</th>
                                <th>Action</th>
                            </tr>
                            </thead>

                            <tbody>
                            @foreach (var venue in Model)
                            {
                                <tr>
                                    <td>@venue.VenueName</td>
                                    <td class="text-center">
                                        <a asp-action="MeetingVenueAddEdit"
                                           asp-route-id="@venue.MeetingTypeId"
                                           class="btn btn-sm btn-warning me-1">
                                            <i class="bi bi-pencil"></i>
                                        </a>

                                        <a asp-action="Delete"
                                           asp-route-id="@venue.MeetingTypeId"
                                           class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>

                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>

        </div>
    </div>
</section>
