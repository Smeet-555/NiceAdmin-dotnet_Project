@{
    ViewData["Title"] = "Meeting Members";
}
@model List<NiceAdmin.Models.MeetingMemberViewModel>
<div class="pagetitle">
    <h1>Meeting Members</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="breadcrumb-item">Meetings</li>
            <li class="breadcrumb-item active">Meeting Members</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card department-card">
                <div class="card-body">

                    <!-- Header -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-people text-primary me-1"></i>
                            Meeting Member List
                        </h5>

                        <a asp-controller="MeetingMember"
                           asp-action="MeetingMemberAddEdit"
                           class="btn btn-primary btn-sm rounded-pill px-3">
                            <i class="bi bi-plus-lg me-1"></i>
                            Add Member
                        </a>
                        
                    </div>

                    <!-- Table -->
                    <div class="table-responsive">
                        <table id="meetingMemberTable"
                               class="table table-hover align-middle department-table datatable">
                            <thead>
                                <tr>
                                    <th>Meeting</th>
                                    <th>Staff Name</th>
                                    <th>Department</th>
                                    <th>Presence</th>
                                    <th>Remarks</th>
                                    <th style="width:15%" class="text-center">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                            @foreach (var meetingmember in Model)
                            {
                                <tr>
                                    <td>@meetingmember.MeetingDescription</td>
                                    <td>@meetingmember.StaffName</td>
                                    <td>@meetingmember.DepartmentName</td>
                                    <td>@meetingmember.IsPresent</td>
                                    <td>@meetingmember.Remarks</td>
                                    <td class="text-center">
                                        <a asp-action="MeetingMemberAddEdit"
                                           asp-route-id="@meetingmember.MeetingId"
                                           class="btn btn-sm btn-warning me-1">
                                            <i class="bi bi-pencil"></i>
                                        </a>

                                        <a asp-action="Delete"
                                           asp-route-id="@meetingmember.MeetingId"
                                           class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>

                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                    <!-- End Table -->

                </div>
            </div>

        </div>
    </div>
</section>
 