@model NiceAdmin.Models.StaffModelView

@{
    ViewData["Title"] = Model.StaffId == 0 ? "Add Staff" : "Edit Staff";
    bool isEdit = Model.StaffId != 0;
}

<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-controller="Staff" asp-action="StaffList">Staff</a>
            </li>
            <li class="breadcrumb-item active">@ViewData["Title"]</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-8">

            <div class="card">
                <div class="card-body">

                    <h5 class="card-title">
                        <i class="bi bi-person text-primary me-2"></i>
                        @(isEdit ? "Edit Staff Details" : "Add New Staff Member")
                    </h5>

                    <form asp-controller="Staff" asp-action="Save" method="post" class="row g-3">
                        <input asp-for="StaffId" type="hidden" />

                        <!-- Staff Name -->
                        <div class="col-md-6">
                            <label asp-for="StaffName" class="form-label fw-bold">
                                Staff Name <span class="text-danger">*</span>
                            </label>
                            <input asp-for="StaffName" 
                                   type="text"
                                   class="form-control"
                                   maxlength="50"
                                   placeholder="Enter staff name"
                                   required />
                            <span asp-validation-for="StaffName" class="text-danger"></span>
                        </div>

                        <!-- Department -->
                        <div class="col-md-6">
                            <label asp-for="DepartmentName" class="form-label fw-bold">
                                Department <span class="text-danger">*</span>
                            </label>
                            <select asp-for="DepartmentName" class="form-select" required>
                                <option value="">Select Department</option>
                                <option value="HR">HR</option>
                                <option value="Finance">Finance</option>
                                <option value="IT">IT</option>
                                <option value="Operations">Operations</option>
                                <option value="Marketing">Marketing</option>
                            </select>
                            <span asp-validation-for="DepartmentName" class="text-danger"></span>
                        </div>

                        <!-- Mobile Number -->
                        <div class="col-md-6">
                            <label asp-for="MobileNo" class="form-label fw-bold">
                                Mobile Number <span class="text-danger">*</span>
                            </label>
                            <input asp-for="MobileNo"
                                   type="text"
                                   class="form-control"
                                   maxlength="20"
                                   placeholder="Enter mobile number"
                                   required />
                            <span asp-validation-for="MobileNo" class="text-danger"></span>
                        </div>

                        <!-- Email Address -->
                        <div class="col-md-6">
                            <label asp-for="EmailAddress" class="form-label fw-bold">
                                Email Address <span class="text-danger">*</span>
                            </label>
                            <input asp-for="EmailAddress"
                                   type="email"
                                   class="form-control"
                                   maxlength="50"
                                   placeholder="Enter email address"
                                   required />
                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="col-12">
                            <hr class="my-4">
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-lg me-1"></i>
                                    @(isEdit ? "Update Staff" : "Save Staff")
                                </button>
                                <a asp-controller="Staff" asp-action="StaffList" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left me-1"></i>
                                    Back to List
                                </a>
                            </div>
                        </div>

                    </form>

                </div>
            </div>

        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-info-circle text-info me-2"></i>
                        Guidelines
                    </h5>
                    <div class="alert alert-info">
                        <h6 class="alert-heading">Staff Guidelines:</h6>
                        <ul class="mb-0 small">
                            <li>All fields marked with * are required</li>
                            <li>Email address must be valid</li>
                            <li>Mobile number should be 10 digits</li>
                            <li>@(isEdit ? "Update existing staff details" : "Add new staff member to the system")</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}