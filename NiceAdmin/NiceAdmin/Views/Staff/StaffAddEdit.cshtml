@model NiceAdmin.Models.StaffModelView

@{
    ViewData["Title"] = Model.StaffId == 0 ? "Add Staff" : "Edit Staff";
}

<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-controller="Staff" asp-action="StaffList">Staff</a>
            </li>
            <li class="breadcrumb-item active">@ViewData["Title"]</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-person text-primary me-2"></i>
                        Staff Information
                    </h5>

                    <form asp-controller="Staff" asp-action="Save" method="post" class="row g-3 needs-validation" novalidate>
                        <input asp-for="StaffId" type="hidden" />
                        
                        <div class="col-md-6">
                            <label asp-for="StaffName" class="form-label">Staff Name *</label>
                            <input asp-for="StaffName" class="form-control" placeholder="Enter staff name" required />
                            <span asp-validation-for="StaffName" class="text-danger"></span>
                            <div class="invalid-feedback">
                                Please provide a valid staff name.
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="DepartmentName" class="form-label">Department *</label>
                            <select asp-for="DepartmentName" class="form-select" required>
                                <option value="">Select Department</option>
                                <option value="HR">HR</option>
                                <option value="Finance">Finance</option>
                                <option value="IT">IT</option>
                                <option value="Operations">Operations</option>
                                <option value="Marketing">Marketing</option>
                                <option value="Sales">Sales</option>
                            </select>
                            <span asp-validation-for="DepartmentName" class="text-danger"></span>
                            <div class="invalid-feedback">
                                Please select a department.
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="MobileNo" class="form-label">Mobile Number *</label>
                            <input asp-for="MobileNo" class="form-control" placeholder="Enter mobile number" required />
                            <span asp-validation-for="MobileNo" class="text-danger"></span>
                            <div class="invalid-feedback">
                                Please provide a valid mobile number.
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="EmailAddress" class="form-label">Email Address *</label>
                            <input asp-for="EmailAddress" type="email" class="form-control" placeholder="Enter email address" required />
                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                            <div class="invalid-feedback">
                                Please provide a valid email address.
                            </div>
                        </div>

                        <div class="col-12">
                            <hr class="my-4">
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-lg me-1"></i>
                                    @(Model.StaffId == 0 ? "Create Staff" : "Update Staff")
                                </button>
                                <a asp-controller="Staff" asp-action="StaffList" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left me-1"></i>
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-info-circle text-info me-2"></i>
                        Guidelines
                    </h5>
                    <div class="alert alert-info">
                        <h6 class="alert-heading">Staff Guidelines:</h6>
                        <ul class="mb-0 small">
                            <li>Staff name should be unique</li>
                            <li>Email address must be valid</li>
                            <li>Fields marked with * are required</li>
                            <li>@(Model.StaffId == 0 ? "New staff member will be created" : "Existing staff member will be updated")</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Bootstrap form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}