@{
    ViewData["Title"] = "Staff List";
}

<div class="pagetitle">
    <h1>Staff</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="breadcrumb-item">Master</li>
            <li class="breadcrumb-item active">Staff</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title">Staff Members</h5>

                        <a asp-action="StaffAddEdit"
                           class="btn btn-primary btn-sm">
                            <i class="bi bi-plus-lg"></i> Add Staff
                        </a>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th>Department</th>
                                <th>Mobile</th>
                                <th>Email</th>
                                <th>Action</th>
                                
                            </tr>
                            </thead>

                            <tbody>
                            @foreach (var staff in Model)
                            {
                                <tr>
                                    <td>@staff.StaffName</td>
                                    <td>@staff.DepartmentName</td>
                                    <td>@staff.MobileNo</td>
                                    <td>@staff.EmailAddress</td>
                                    <td class="text-center">
                                        <a asp-action="StaffAddEdit"
                                           asp-route-id="@staff.StaffId"
                                           class="btn btn-sm btn-warning me-1">
                                            <i class="bi bi-pencil"></i>
                                        </a>

                                        <a asp-action="Delete"
                                           asp-route-id="@staff.StaffId"
                                           class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>

                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>

        </div>
    </div>
</section>
