@{
    ViewData["Title"] = "Dashboard";
}

<div class="pagetitle">
    <h1>Dashboard</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="breadcrumb-item active">Dashboard</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section dashboard">
    <div class="row">

        <!-- Left side columns -->
        <div class="col-lg-8">
            <div class="row">

                <!-- Total Meetings Card -->
                <div class="col-xxl-4 col-md-6">
                    <div class="card info-card sales-card">
                        <div class="filter">
                            <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                <li class="dropdown-header text-start">
                                    <h6>Filter</h6>
                                </li>
                                <li><a class="dropdown-item" href="#">Today</a></li>
                                <li><a class="dropdown-item" href="#">This Month</a></li>
                                <li><a class="dropdown-item" href="#">This Year</a></li>
                            </ul>
                        </div>

                        <div class="card-body">
                            <h5 class="card-title">Total Meetings <span>| Today</span></h5>

                            <div class="d-flex align-items-center">
                                <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                    <i class="bi bi-calendar-event"></i>
                                </div>
                                <div class="ps-3">
                                    <h6>12</h6>
                                    <span class="text-success small pt-1 fw-bold">8%</span> 
                                    <span class="text-muted small pt-2 ps-1">increase</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!-- End Total Meetings Card -->

                <!-- Active Staff Card -->
                <div class="col-xxl-4 col-md-6">
                    <div class="card info-card revenue-card">
                        <div class="filter">
                            <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                <li class="dropdown-header text-start">
                                    <h6>Filter</h6>
                                </li>
                                <li><a class="dropdown-item" href="#">Today</a></li>
                                <li><a class="dropdown-item" href="#">This Month</a></li>
                                <li><a class="dropdown-item" href="#">This Year</a></li>
                            </ul>
                        </div>

                        <div class="card-body">
                            <h5 class="card-title">Active Staff <span>| This Month</span></h5>

                            <div class="d-flex align-items-center">
                                <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                    <i class="bi bi-people"></i>
                                </div>
                                <div class="ps-3">
                                    <h6>156</h6>
                                    <span class="text-success small pt-1 fw-bold">5%</span> 
                                    <span class="text-muted small pt-2 ps-1">increase</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!-- End Active Staff Card -->

                <!-- Departments Card -->
                <div class="col-xxl-4 col-xl-12">
                    <div class="card info-card customers-card">
                        <div class="filter">
                            <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                <li class="dropdown-header text-start">
                                    <h6>Filter</h6>
                                </li>
                                <li><a class="dropdown-item" href="#">Today</a></li>
                                <li><a class="dropdown-item" href="#">This Month</a></li>
                                <li><a class="dropdown-item" href="#">This Year</a></li>
                            </ul>
                        </div>

                        <div class="card-body">
                            <h5 class="card-title">Departments <span>| Total</span></h5>

                            <div class="d-flex align-items-center">
                                <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                    <i class="bi bi-building"></i>
                                </div>
                                <div class="ps-3">
                                    <h6>8</h6>
                                    <span class="text-success small pt-1 fw-bold">2</span> 
                                    <span class="text-muted small pt-2 ps-1">new this month</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!-- End Departments Card -->

                <!-- Meeting Analytics -->
                <div class="col-12">
                    <div class="card">
                        <div class="filter">
                            <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                <li class="dropdown-header text-start">
                                    <h6>Filter</h6>
                                </li>
                                <li><a class="dropdown-item" href="#">Today</a></li>
                                <li><a class="dropdown-item" href="#">This Month</a></li>
                                <li><a class="dropdown-item" href="#">This Year</a></li>
                            </ul>
                        </div>

                        <div class="card-body">
                            <h5 class="card-title">Meeting Analytics <span>/This Week</span></h5>

                            <!-- Line Chart -->
                            <div id="reportsChart"></div>

                            <script>
                                document.addEventListener("DOMContentLoaded", () => {
                                  new ApexCharts(document.querySelector("#reportsChart"), {
                                    series: [{
                                      name: 'Scheduled Meetings',
                                      data: [8, 12, 15, 18, 22, 25, 28],
                                    }, {
                                      name: 'Completed Meetings',
                                      data: [6, 10, 12, 16, 20, 22, 24]
                                    }, {
                                      name: 'Cancelled Meetings',
                                      data: [2, 2, 3, 2, 2, 3, 4]
                                    }],
                                    chart: {
                                      height: 350,
                                      type: 'area',
                                      toolbar: {
                                        show: false
                                      },
                                    },
                                    markers: {
                                      size: 4
                                    },
                                    colors: ['#4154f1', '#2eca6a', '#ff771d'],
                                    fill: {
                                      type: "gradient",
                                      gradient: {
                                        shadeIntensity: 1,
                                        opacityFrom: 0.3,
                                        opacityTo: 0.4,
                                        stops: [0, 90, 100]
                                      }
                                    },
                                    dataLabels: {
                                      enabled: false
                                    },
                                    stroke: {
                                      curve: 'smooth',
                                      width: 2
                                    },
                                    xaxis: {
                                      type: 'datetime',
                                      categories: ["2024-01-15T00:00:00.000Z", "2024-01-16T00:00:00.000Z", "2024-01-17T00:00:00.000Z", "2024-01-18T00:00:00.000Z", "2024-01-19T00:00:00.000Z", "2024-01-20T00:00:00.000Z", "2024-01-21T00:00:00.000Z"]
                                    },
                                    tooltip: {
                                      x: {
                                        format: 'dd/MM/yy'
                                      },
                                    }
                                  }).render();
                                });
                            </script>
                            <!-- End Line Chart -->
                        </div>
                    </div>
                </div><!-- End Meeting Analytics -->

                <!-- Recent Meetings -->
                <div class="col-12">
                    <div class="card recent-sales overflow-auto">
                        <div class="filter">
                            <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                <li class="dropdown-header text-start">
                                    <h6>Filter</h6>
                                </li>
                                <li><a class="dropdown-item" href="#">Today</a></li>
                                <li><a class="dropdown-item" href="#">This Month</a></li>
                                <li><a class="dropdown-item" href="#">This Year</a></li>
                            </ul>
                        </div>

                        <div class="card-body">
                            <h5 class="card-title">Recent Meetings <span>| Today</span></h5>

                            <table class="table table-borderless datatable">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Meeting</th>
                                        <th scope="col">Department</th>
                                        <th scope="col">Venue</th>
                                        <th scope="col">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th scope="row"><a href="#">#M001</a></th>
                                        <td>Project Review Meeting</td>
                                        <td>IT</td>
                                        <td>Conference Room A</td>
                                        <td><span class="badge bg-success">Completed</span></td>
                                    </tr>
                                    <tr>
                                        <th scope="row"><a href="#">#M002</a></th>
                                        <td>Monthly Team Sync</td>
                                        <td>HR</td>
                                        <td>Main Hall</td>
                                        <td><span class="badge bg-warning">In Progress</span></td>
                                    </tr>
                                    <tr>
                                        <th scope="row"><a href="#">#M003</a></th>
                                        <td>Budget Planning</td>
                                        <td>Finance</td>
                                        <td>Board Room</td>
                                        <td><span class="badge bg-primary">Scheduled</span></td>
                                    </tr>
                                    <tr>
                                        <th scope="row"><a href="#">#M004</a></th>
                                        <td>Training Session</td>
                                        <td>Operations</td>
                                        <td>Training Room</td>
                                        <td><span class="badge bg-danger">Cancelled</span></td>
                                    </tr>
                                    <tr>
                                        <th scope="row"><a href="#">#M005</a></th>
                                        <td>Client Presentation</td>
                                        <td>Sales</td>
                                        <td>Conference Room B</td>
                                        <td><span class="badge bg-success">Completed</span></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div><!-- End Recent Meetings -->

                <!-- Meeting Types Overview -->
                <div class="col-12">
                    <div class="card top-selling overflow-auto">
                        <div class="filter">
                            <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                <li class="dropdown-header text-start">
                                    <h6>Filter</h6>
                                </li>
                                <li><a class="dropdown-item" href="#">Today</a></li>
                                <li><a class="dropdown-item" href="#">This Month</a></li>
                                <li><a class="dropdown-item" href="#">This Year</a></li>
                            </ul>
                        </div>

                        <div class="card-body pb-0">
                            <h5 class="card-title">Popular Meeting Types <span>| This Month</span></h5>

                            <table class="table table-borderless">
                                <thead>
                                    <tr>
                                        <th scope="col">Type</th>
                                        <th scope="col">Department</th>
                                        <th scope="col">Count</th>
                                        <th scope="col">Avg Duration</th>
                                        <th scope="col">Success Rate</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><i class="bi bi-calendar-check text-primary me-2"></i>Project Meeting</td>
                                        <td>IT</td>
                                        <td class="fw-bold">24</td>
                                        <td>2h 30m</td>
                                        <td><span class="text-success">95%</span></td>
                                    </tr>
                                    <tr>
                                        <td><i class="bi bi-people text-info me-2"></i>Team Sync</td>
                                        <td>All</td>
                                        <td class="fw-bold">18</td>
                                        <td>1h 15m</td>
                                        <td><span class="text-success">92%</span></td>
                                    </tr>
                                    <tr>
                                        <td><i class="bi bi-graph-up text-success me-2"></i>Management Review</td>
                                        <td>Management</td>
                                        <td class="fw-bold">12</td>
                                        <td>3h 00m</td>
                                        <td><span class="text-success">88%</span></td>
                                    </tr>
                                    <tr>
                                        <td><i class="bi bi-mortarboard text-warning me-2"></i>Training Session</td>
                                        <td>HR</td>
                                        <td class="fw-bold">8</td>
                                        <td>4h 00m</td>
                                        <td><span class="text-warning">75%</span></td>
                                    </tr>
                                    <tr>
                                        <td><i class="bi bi-handshake text-primary me-2"></i>Client Meeting</td>
                                        <td>Sales</td>
                                        <td class="fw-bold">15</td>
                                        <td>1h 45m</td>
                                        <td><span class="text-success">90%</span></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div><!-- End Meeting Types Overview -->

            </div>
        </div><!-- End Left side columns -->

        <!-- Right side columns -->
        <div class="col-lg-4">

            <!-- Recent Activity -->
            <div class="card">
                <div class="filter">
                    <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                        <li class="dropdown-header text-start">
                            <h6>Filter</h6>
                        </li>
                        <li><a class="dropdown-item" href="#">Today</a></li>
                        <li><a class="dropdown-item" href="#">This Month</a></li>
                        <li><a class="dropdown-item" href="#">This Year</a></li>
                    </ul>
                </div>

                <div class="card-body">
                    <h5 class="card-title">Recent Activity <span>| Today</span></h5>

                    <div class="activity">
                        <div class="activity-item d-flex">
                            <div class="activite-label">15 min</div>
                            <i class='bi bi-circle-fill activity-badge text-success align-self-start'></i>
                            <div class="activity-content">
                                <strong>Project Review Meeting</strong> completed successfully in Conference Room A
                            </div>
                        </div>

                        <div class="activity-item d-flex">
                            <div class="activite-label">32 min</div>
                            <i class='bi bi-circle-fill activity-badge text-primary align-self-start'></i>
                            <div class="activity-content">
                                New staff member <strong>John Doe</strong> added to IT Department
                            </div>
                        </div>

                        <div class="activity-item d-flex">
                            <div class="activite-label">1 hr</div>
                            <i class='bi bi-circle-fill activity-badge text-warning align-self-start'></i>
                            <div class="activity-content">
                                <strong>Training Session</strong> rescheduled to next week
                            </div>
                        </div>

                        <div class="activity-item d-flex">
                            <div class="activite-label">2 hrs</div>
                            <i class='bi bi-circle-fill activity-badge text-info align-self-start'></i>
                            <div class="activity-content">
                                New meeting venue <strong>Conference Room C</strong> added
                            </div>
                        </div>

                        <div class="activity-item d-flex">
                            <div class="activite-label">3 hrs</div>
                            <i class='bi bi-circle-fill activity-badge text-danger align-self-start'></i>
                            <div class="activity-content">
                                <strong>Budget Meeting</strong> cancelled due to unavailability
                            </div>
                        </div>

                        <div class="activity-item d-flex">
                            <div class="activite-label">1 day</div>
                            <i class='bi bi-circle-fill activity-badge text-muted align-self-start'></i>
                            <div class="activity-content">
                                Monthly department reports submitted by all teams
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- End Recent Activity -->

            <!-- Department Overview -->
            <div class="card">
                <div class="filter">
                    <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                        <li class="dropdown-header text-start">
                            <h6>Filter</h6>
                        </li>
                        <li><a class="dropdown-item" href="#">Today</a></li>
                        <li><a class="dropdown-item" href="#">This Month</a></li>
                        <li><a class="dropdown-item" href="#">This Year</a></li>
                    </ul>
                </div>

                <div class="card-body pb-0">
                    <h5 class="card-title">Department Activity <span>| This Month</span></h5>

                    <div id="departmentChart" style="min-height: 400px;" class="echart"></div>

                    <script>
                        document.addEventListener("DOMContentLoaded", () => {
                          var departmentChart = echarts.init(document.querySelector("#departmentChart")).setOption({
                            legend: {
                              data: ['Meetings Held', 'Staff Participation']
                            },
                            radar: {
                              indicator: [{
                                  name: 'IT',
                                  max: 50
                                },
                                {
                                  name: 'HR',
                                  max: 40
                                },
                                {
                                  name: 'Finance',
                                  max: 35
                                },
                                {
                                  name: 'Operations',
                                  max: 30
                                },
                                {
                                  name: 'Marketing',
                                  max: 25
                                },
                                {
                                  name: 'Sales',
                                  max: 45
                                }
                              ]
                            },
                            series: [{
                              name: 'Department Activity',
                              type: 'radar',
                              data: [{
                                  value: [42, 32, 28, 25, 20, 38],
                                  name: 'Meetings Held'
                                },
                                {
                                  value: [38, 35, 30, 22, 18, 40],
                                  name: 'Staff Participation'
                                }
                              ]
                            }]
                          });
                        });
                    </script>
                </div>
            </div><!-- End Department Overview -->

            <!-- Meeting Status Distribution -->
            <div class="card">
                <div class="filter">
                    <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                        <li class="dropdown-header text-start">
                            <h6>Filter</h6>
                        </li>
                        <li><a class="dropdown-item" href="#">Today</a></li>
                        <li><a class="dropdown-item" href="#">This Month</a></li>
                        <li><a class="dropdown-item" href="#">This Year</a></li>
                    </ul>
                </div>

                <div class="card-body pb-0">
                    <h5 class="card-title">Meeting Status <span>| This Month</span></h5>

                    <div id="statusChart" style="min-height: 400px;" class="echart"></div>

                    <script>
                        document.addEventListener("DOMContentLoaded", () => {
                          echarts.init(document.querySelector("#statusChart")).setOption({
                            tooltip: {
                              trigger: 'item'
                            },
                            legend: {
                              top: '5%',
                              left: 'center'
                            },
                            series: [{
                              name: 'Meeting Status',
                              type: 'pie',
                              radius: ['40%', '70%'],
                              avoidLabelOverlap: false,
                              label: {
                                show: false,
                                position: 'center'
                              },
                              emphasis: {
                                label: {
                                  show: true,
                                  fontSize: '18',
                                  fontWeight: 'bold'
                                }
                              },
                              labelLine: {
                                show: false
                              },
                              data: [{
                                  value: 65,
                                  name: 'Completed'
                                },
                                {
                                  value: 25,
                                  name: 'Scheduled'
                                },
                                {
                                  value: 8,
                                  name: 'In Progress'
                                },
                                {
                                  value: 2,
                                  name: 'Cancelled'
                                }
                              ]
                            }]
                          });
                        });
                    </script>
                </div>
            </div><!-- End Meeting Status Distribution -->

            <!-- Quick Actions -->
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Quick Actions</h5>
                    
                    <div class="d-grid gap-2">
                        <a asp-controller="Meeting" asp-action="MeetingAddEdit" class="btn btn-primary">
                            <i class="bi bi-plus-lg me-2"></i>Schedule New Meeting
                        </a>
                        <a asp-controller="Staff" asp-action="StaffAddEdit" class="btn btn-outline-primary">
                            <i class="bi bi-person-plus me-2"></i>Add Staff Member
                        </a>
                        <a asp-controller="Department" asp-action="DepartmentAddEdit" class="btn btn-outline-secondary">
                            <i class="bi bi-building me-2"></i>Create Department
                        </a>
                        <a asp-controller="MeetingVenue" asp-action="MeetingVenueAddEdit" class="btn btn-outline-info">
                            <i class="bi bi-geo-alt me-2"></i>Add Meeting Venue
                        </a>
                    </div>
                </div>
            </div><!-- End Quick Actions -->

        </div><!-- End Right side columns -->

    </div>
</section>