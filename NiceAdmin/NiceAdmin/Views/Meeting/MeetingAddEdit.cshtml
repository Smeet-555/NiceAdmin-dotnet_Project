@{
    ViewData["Title"] = "Add / Edit Meeting";

    /* UI-only flags */
    bool isEdit = true;   // false = Add, true = Edit

    /* Old values (shown only when Edit) */
    string meetingDate = "2025-02-15T10:30";
    string department = "IT";
    string venue = "Conference Room A";
    string meetingType = "Board Meeting";
    string description = "Monthly planning discussion";
    string documentPath = "/docs/meeting-agenda.pdf";
    bool isCancelled = false;
    string cancelDate = "";
    string cancelReason = "";
}

<div class="pagetitle">
    <h1>@(isEdit ? "Edit Meeting" : "Add Meeting")</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="breadcrumb-item">Master</li>
            <li class="breadcrumb-item active">Meeting</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-9">

            <div class="card">
                <div class="card-body">

                    <h5 class="card-title">
                        @(isEdit ? "Edit Meeting Details" : "Schedule New Meeting")
                    </h5>

                    <!-- ===== ONLY USER INPUT FIELDS ===== -->
                    <form class="row g-3">

                        <!-- Meeting Date -->
                        <div class="col-md-4">
                            <label class="form-label fw-bold">
                                Meeting Date & Time <span class="text-danger">*</span>
                            </label>
                            <input type="datetime-local"
                                   class="form-control"
                                   value="@(isEdit? meetingDate : "")" />
                        </div>

                        <!-- Department -->
                        <div class="col-md-4">
                            <label class="form-label fw-bold">
                                Department <span class="text-danger">*</span>
                            </label>
                            <select class="form-select">
                                <option disabled>Select Department</option>
                                <option selected="@(department == "HR")">HR</option>
                                <option selected="@(department == "Finance")">Finance</option>
                                <option selected="@(department == "IT")">IT</option>
                            </select>
                        </div>

                        <!-- Meeting Type -->
                        <div class="col-md-4">
                            <label class="form-label fw-bold">
                                Meeting Type <span class="text-danger">*</span>
                            </label>
                            <select class="form-select">
                                <option disabled>Select Type</option>
                                <option selected="@(meetingType == "Board Meeting")">Board Meeting</option>
                                <option selected="@(meetingType == "Client Meeting")">Client Meeting</option>
                                <option selected="@(meetingType == "Training")">Training</option>
                            </select>
                        </div>

                        <!-- Meeting Venue -->
                        <div class="col-md-6">
                            <label class="form-label fw-bold">
                                Meeting Venue <span class="text-danger">*</span>
                            </label>
                            <select class="form-select">
                                <option disabled>Select Venue</option>
                                <option selected="@(venue == "Conference Room A")">Conference Room A</option>
                                <option selected="@(venue == "Conference Room B")">Conference Room B</option>
                            </select>
                        </div>

                        <!-- Document Upload -->
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Meeting Document</label>

                            @if (isEdit && !string.IsNullOrEmpty(documentPath))
                            {
                                <div class="mb-2">
                                    <a href="@documentPath" target="_blank" class="text-primary">
                                        View Existing Document
                                    </a>
                                </div>
                            }

                            <input type="file"
                                   class="form-control"
                                   accept=".pdf,.doc,.docx,.xls,.xlsx" />
                        </div>

                        <!-- Description -->
                        <div class="col-12">
                            <label class="form-label fw-bold">Meeting Description</label>
                            <textarea class="form-control"
                                      rows="3"
                                      maxlength="250"
                                      placeholder="Optional agenda or notes">@(
                                isEdit ? description : ""
                            )</textarea>
                        </div>

                        <!-- Is Cancelled -->
                        <div class="col-md-3">
                            <label class="form-label fw-bold">Is Cancelled</label>
                            <select class="form-select">
                                <option selected="@(!isCancelled)">No</option>
                                <option selected="@(isCancelled)">Yes</option>
                            </select>
                        </div>

                        <!-- Cancellation Date -->
                        <div class="col-md-5">
                            <label class="form-label fw-bold">Cancellation Date & Time</label>
                            <input type="datetime-local"
                                   class="form-control"
                                   value="@(isEdit? cancelDate : "")" />
                        </div>

                        <!-- Cancellation Reason -->
                        <div class="col-md-4">
                            <label class="form-label fw-bold">Cancellation Reason</label>
                            <input type="text"
                                   maxlength="250"
                                   class="form-control"
                                   placeholder="Optional reason"
                                   value="@(isEdit? cancelReason : "")" />
                        </div>

                        <!-- Buttons -->
                        <div class="col-12 text-end mt-4">
                            <button type="button" class="btn btn-secondary me-2">
                                Cancel
                            </button>

                            <button type="button" class="btn btn-primary">
                                @(isEdit ? "Update Meeting" : "Save Meeting")
                            </button>
                        </div>

                    </form>
                    <!-- ===== END FORM ===== -->

                </div>
            </div>

        </div>
    </div>
</section>