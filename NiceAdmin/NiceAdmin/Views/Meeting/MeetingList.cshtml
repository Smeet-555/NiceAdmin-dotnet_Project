@{
    ViewData["Title"] = "Meeting List";
}

<div class="pagetitle">
    <h1>Meetings</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="breadcrumb-item">Master</li>
            <li class="breadcrumb-item active">Meetings</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title">Meeting List</h5>

                        <a asp-action="MeetingAddEdit"
                           class="btn btn-primary btn-sm">
                            <i class="bi bi-plus-lg"></i> Add Meeting
                        </a>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Venue</th>
                                    <th>Meeting Type</th>
                                    <th>Department</th>
                                    <th>Status</th>
                                </tr>
                            </thead>

                            <tbody>
                            @foreach (var meeting in Model)
                            {
                                <tr>
                                    <td>@meeting.MeetingDate.ToString("yyyy-MM-dd")</td>
                                    <td>@meeting.MeetingVenueName</td>
                                    <td>@meeting.MeetingTypeName</td>
                                    <td>@meeting.DepartmentName</td>
                                    <td>
                                        @if (meeting.IsCancelled)
                                        {
                                            <span class="badge bg-danger">Cancelled</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Scheduled</span>
                                        }
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>

        </div>
    </div>
</section>

