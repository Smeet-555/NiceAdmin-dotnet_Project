@model List<NiceAdmin.Models.MeetingViewModel>

@{
    ViewData["Title"] = "Meeting List";
}

<div class="pagetitle">
    <h1>Meetings</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="breadcrumb-item">Master</li>
            <li class="breadcrumb-item active">Meetings</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <!-- Success/Error Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-1"></i>
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle me-1"></i>
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card">
                <div class="card-body">

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title">
                            <i class="bi bi-calendar-event text-primary me-1"></i>
                            Meeting List
                        </h5>

                        <a asp-action="MeetingAddEdit"
                           class="btn btn-primary btn-sm rounded-pill px-3">
                            <i class="bi bi-plus-lg me-1"></i>
                            Add Meeting
                        </a>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Venue</th>
                                    <th>Meeting Type</th>
                                    <th>Department</th>
                                    <th>Status</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                            @foreach (var meeting in Model)
                            {
                                <tr>
                                    @* <td>@meeting.MeetingId</td> *@
                                    <td>@meeting.MeetingDate.ToString("yyyy-MM-dd")</td>
                                    <td>@meeting.MeetingVenueName</td>
                                    <td>@meeting.MeetingTypeName</td>
                                    <td>@meeting.DepartmentName</td>
                                    <td>
                                        @if (meeting.IsCancelled)
                                        {
                                            <span class="badge bg-danger">Cancelled</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Scheduled</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="MeetingAddEdit"
                                           asp-route-id="@meeting.MeetingId"
                                           class="btn btn-sm btn-outline-primary me-1"
                                           title="Edit Meeting">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger"
                                                onclick="confirmDelete(@meeting.MeetingId, '@meeting.MeetingTypeName - @meeting.MeetingDate.ToString("yyyy-MM-dd")')"
                                                title="Delete Meeting">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>

        </div>
    </div>
</section>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle text-warning me-2"></i>
                    Confirm Delete
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the meeting <strong id="meetingNameToDelete"></strong>?</p>
                <p class="text-muted small">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>
                        Delete Meeting
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

    <script>
        function confirmDelete(meetingId, meetingName) {
            document.getElementById('meetingNameToDelete').textContent = meetingName;
            document.getElementById('deleteForm').action = '@Url.Action("Delete", "Meeting")/' + meetingId;
            
            var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }
    </script>